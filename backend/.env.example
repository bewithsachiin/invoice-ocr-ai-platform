# Application
APP_NAME="Invoice OCR Platform"
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://your_db_user:your_db_password@localhost:5432/invoice_ocr_db

# Redis
REDIS_URL=redis://:your_redis_password@localhost:6379/0

# Security - CHANGE THIS IN PRODUCTION!
SECRET_KEY=change-this-to-a-secure-random-key-minimum-32-characters-long-for-production

# CORS (Add your frontend URLs)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]

# Storage
STORAGE_TYPE=local
STORAGE_PATH=/path/to/invoice/storage

# WhatsApp (Optional)
WHATSAPP_API_URL=http://localhost:3001

# Email (Optional - configure if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@yourdomain.com

# OCR Settings
OCR_ENGINE=tesseract
OCR_CONFIDENCE_THRESHOLD=0.70
